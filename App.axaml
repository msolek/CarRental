<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CarManagement.App"
             RequestedThemeVariant="Default">

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

        <!-- Button base style -->
        <Style Selector="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <!-- Accent button (primary actions) -->
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#106EBE"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Danger button (destructive actions) -->
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#A4262C"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Warning button (return actions) -->
        <Style Selector="Button.warning">
            <Setter Property="Background" Value="#CA5010"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.warning:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#9A3B06"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Success button (rent/confirm actions) -->
        <Style Selector="Button.success">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.success:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#0B6A0B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- DataGrid borderless with horizontal lines and alternating rows -->
        <Style Selector="DataGrid">
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E8E8E8"/>
        </Style>

        <!-- DataGrid column header styling -->
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- DataGrid row hover -->
        <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#EDF5FD"/>
        </Style>

        <!-- DataGrid selected row -->
        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#D6E8F8"/>
        </Style>

        <!-- DataGrid cell padding -->
        <Style Selector="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <!-- TabItem styling -->
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,10"/>
        </Style>

        <!-- TextBox consistent styling -->
        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- NumericUpDown consistent styling -->
        <Style Selector="NumericUpDown">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- ComboBox consistent styling -->
        <Style Selector="ComboBox">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </Application.Styles>
</Application>
