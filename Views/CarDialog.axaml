<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CarManagement.Views.CarDialog"
        Width="420" Height="380"
        Title="Car Details">

  <Border Margin="4" Padding="20" CornerRadius="8">
    <StackPanel>
      <TextBlock Text="Car Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1A1A1A"/>

      <TextBlock Text="Brand *" Margin="0,8,0,4" FontWeight="SemiBold" FontSize="13"/>
      <TextBox Text="{Binding Car.Brand}" Watermark="Toyota"/>

      <TextBlock Text="Model *" Margin="0,12,0,4" FontWeight="SemiBold" FontSize="13"/>
      <TextBox Text="{Binding Car.Model}" Watermark="RAV4"/>

      <TextBlock Text="Year *" Margin="0,12,0,4" FontWeight="SemiBold" FontSize="13"/>
      <NumericUpDown Value="{Binding Car.Year}"
                     Minimum="1900"
                     Maximum="2100"
                     Increment="1"
                     FormatString="0"/>

      <TextBlock Text="Rental Price Per Day *" Margin="0,12,0,4" FontWeight="SemiBold" FontSize="13"/>
      <NumericUpDown Value="{Binding Car.RentalPricePerDay}"
                     Minimum="0"
                     Maximum="10000"
                     Increment="5"
                     FormatString="C2"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,28,0,0" Spacing="10">
        <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100"/>
        <Button Content="OK" Classes="accent" Command="{Binding OkCommand}" Width="100"/>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
