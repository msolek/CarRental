<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CarManagement.Views.RentalDialog"
        Width="470" Height="430"
        Title="Rent Car">

  <Border Margin="4" Padding="20" CornerRadius="8">
    <StackPanel>
      <TextBlock Text="Car Information" FontSize="18" FontWeight="Bold" Foreground="#1A1A1A"/>
      <TextBlock Text="{Binding CarInfo}" FontSize="14" Margin="0,6,0,0" Foreground="#555"/>

      <TextBlock Text="Select Customer *" Margin="0,20,0,6" FontWeight="SemiBold" FontSize="13"/>
      <ComboBox ItemsSource="{Binding Customers}"
                SelectedItem="{Binding SelectedCustomer}"
                HorizontalAlignment="Stretch">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <StackPanel>
              <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
              <TextBlock Text="{Binding Phone}" FontSize="11" Foreground="Gray"/>
            </StackPanel>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>

      <TextBlock Text="Customer Details" Margin="0,16,0,6" FontWeight="SemiBold" FontSize="13" Foreground="#666"/>
      <Border Background="#F5F7FA" BorderBrush="#E0E4EA" BorderThickness="1" Padding="14" CornerRadius="6">
        <StackPanel Spacing="6">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Name: " FontWeight="SemiBold" Width="80" Foreground="#555"/>
            <TextBlock Text="{Binding CustomerName}"/>
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Phone: " FontWeight="SemiBold" Width="80" Foreground="#555"/>
            <TextBlock Text="{Binding CustomerPhone}"/>
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Email: " FontWeight="SemiBold" Width="80" Foreground="#555"/>
            <TextBlock Text="{Binding CustomerEmail}"/>
          </StackPanel>
        </StackPanel>
      </Border>

      <TextBlock Text="Rental Date" Margin="0,16,0,6" FontWeight="SemiBold" FontSize="13"/>
      <DatePicker x:Name="RentalDatePicker" SelectedDateChanged="RentalDatePicker_SelectedDateChanged"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0" Spacing="10">
        <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100"/>
        <Button Content="Rent" Classes="success" Command="{Binding OkCommand}" Width="100"/>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
